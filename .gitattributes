# Auto detect text files and perform LF normalization
* text=auto

# Force specific line endings
*.js    text eol=lf
*.jsx   text eol=lf
*.ts    text eol=lf
*.tsx   text eol=lf
*.css   text eol=lf
*.html  text eol=lf
*.json  text eol=lf
*.md    text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf
*.toml  text eol=lf
*.rs    text eol=lf
*.sql   text eol=lf
*.sh    text eol=lf

# Binary files
*.png   binary
*.jpg   binary
*.jpeg  binary
*.gif   binary
*.ico   binary
*.svg   text eol=lf
*.woff  binary
*.woff2 binary
*.ttf   binary
*.eot   binary

